[Unit]
Description=Gunicorn instance to serve FastAPI app
After=network.target

[Service]
User=alanwang
Group=alanwang
WorkingDirectory=/home/alanwang/app/src
Environment="PATH=/home/alanwang/app/venv/bin"
EnvironmentFile=/home/alanwang/.env
ExecStart=/home/alanwang/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000
Restart=always

[Install]
WantedBy=multi-user.target
